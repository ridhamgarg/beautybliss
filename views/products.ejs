<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Beautybliss - Products</title>
    <link rel="stylesheet" href="/css/products.css" />
  </head>
  <body>
    <%- include ('partials/header.ejs', {isUserLoggedIn}) %>

    <div class="hero">
      <h2>Explore Our Exclusive Range of Beauty Products</h2>
      <p>Discover the best in skincare, makeup, haircare, and more.</p>
    </div>

    <div class="main-container">
      <div class="categories-container">
        <% allCategories.forEach(category => { %>
        <a href="/shopbycategory/<%= category.id %>" class="category-card">
          <img src="<%= category.image %>" alt="<%= category.name %>" />
          <h4>
            <%= category.name.split('_').map(word =>
            word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
          </h4>
        </a>
        <% }) %>
      </div>

      <div class="products-container">
        <% allProducts.forEach(product => { %>
            <a href="/products/<%= product.id %>" class="product-card">
                <img src="<%= product.image %>" alt="<%= product.name %>" />
                <% if (product.stock < 20) { %>
                    <div class="ribbon">Low Stock!</div>
                <% } %>
                <h3><%= product.name %></h3>
                <p class="price">â‚¹<%= product.price %></p>
            </a>
        <% }) %>
      </div>
    </div>

    <%- include ('partials/footer.ejs') %>
    
  </body>
</html>
