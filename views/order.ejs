<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beautybliss - All Orders</title>
    <link rel="stylesheet" href="/css/order.css">
</head>
<body>
    <%- include('partials/header.ejs', isUserLoggedIn) %>
    
    <div class="hero" style="background-image: url('/images/order-hero.jpg'); background-size: cover; background-position: center;">
        <div class="hero-overlay">
            <h1>Your Orders</h1>
            <p>Track and view your purchased products here.</p>
        </div>
    </div>

    <div class="orders-container">
        <h2>Order History</h2>

        <% if (orders.length > 0) { %>
            <div class="orders-list">
                <% orders.forEach(order => { %>
                    <div class="order-card">
                        <img src="<%= order.product.image %>" alt="<%= order.product.name %>">
                        <div class="order-details">
                            <h3><%= order.product.name %></h3>
                            <p>Price: â‚¹<%= order.product.price %></p>
                            <p>Quantity: <%= order.quantity %></p>
                            <p>Ordered On: <%= new Date(order.createdAt).toLocaleDateString() %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="no-orders">You have no orders yet.</p>
        <% } %>
    </div>

    <%- include('partials/footer.ejs') %>
</body>
</html>
